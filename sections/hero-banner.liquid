{{ 'hero-banner.css' |  asset_url |  stylesheet_tag }}
<hero-banner class="hero-banner">
  <div class="page-width">
    <div class="banner-container">
       <div class="banner-image">
        <a>
            <picture class="banner-image__picture">
                <source  media="(min-width:768px)" srcset="{{ section.settings.desktop_img |  img_url: 'original' }}">

                <source  media="(max-width:767px)" srcset="{{ section.settings.mobile_img |  img_url: 'original' }}">

                <img loading="lazy" src="{{ section.settings.mobile_img |  img_url: 'original' }}" alt="hero-banner-image" class="">
            </picture>
        </a>
       </div>

       <div class="banner-content">
          <h2 class="banner-head">Spring Summer SS24 Sale</h2>
          <a href="#" class="collection-link">
            Shop now
          </a>
       </div>
    </div>
  </div>
</hero-banner>

{% schema %}
{
    "name": "Hero banner",
    "settings": [
        
          {
            "type": "image_picker",
            "id":"mobile_img",
            "label":"Select the mobile image"
          },

          {
            "type": "image_picker",
            "id":"desktop_img",
            "label":"Select the desktop image"
          }
        ],
        "presets": [
            {
                "name":"Hero banner"
            }
            
        ]
}
{% endschema %}